generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  full_name String   @default("UNKNOWN USER")
  age       Int
  email     String   @unique
  job       String
  isAdmin   Boolean?
  Post      Post?
}

model Article {
  id     Int     @id @default(autoincrement())
  title  String
  Author Author?
}

model Author {
  id        Int     @id @default(autoincrement())
  full_name String
  articleId Int     @unique
  Article   Article @relation(fields: [articleId], references: [id])
}

model Category {
  id      Int      @id @default(autoincrement())
  title   String
  Product Product?
}

model Post {
  id     Int     @id @default(autoincrement())
  title  String
  userId Int     @unique
  body   String? @default("LOREM IPSUM")
  User   User    @relation(fields: [userId], references: [id])
}

model Product {
  id         Int      @id @default(autoincrement())
  title      String
  price      Int
  categoryId Int      @unique
  Category   Category @relation(fields: [categoryId], references: [id])
}
