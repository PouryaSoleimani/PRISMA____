generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  full_name String   @default("UNKNOWN USER")
  age       Int
  email     String   @unique
  job       String
  isAdmin   Boolean?
  Post      Post[]
}

model Post {
  id     Int     @id @default(autoincrement())
  title  String
  author String? @default("UNKNOWN AUTHOR")
  userId Int     @unique
  user   User    @relation(fields: [userId], references: [id])
}

model Category {
  id      Int       @id @default(autoincrement())
  title   String
  Product Product[]
}

model Product {
  id         Int      @id @default(autoincrement())
  title      String
  price      Int
  categoryId Int      @unique
  category   Category @relation(fields: [categoryId], references: [id])
}
